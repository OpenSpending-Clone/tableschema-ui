extends:
  airbnb

parser:
  babel-eslint

plugins:
  - html

env:
  es6: true
  node: true
  mocha: true
  browser: true

parserOptions:
  ecmaVersion: 2018
  ecmaFeatures:
    jsx: true

rules:
  max-len:
    - error
    - code: 90
      ignoreStrings: true
  quotes:
    - error
    - single
    - avoid-escape
  semi:
    - error
    - never
  object-property-newline:
    - off
  no-empty:
    - error
    - allowEmptyCatch: true
  no-use-before-define:
    - off
    - nofunc
  one-var:
    - off
  eqeqeq:
    - warn
    - smart
  camelcase:
    - off
  no-confusing-arrow:
    - off
  no-unused-vars:
    - warn
    - args: none
  no-func-assign:
    - off
  no-param-reassign:
    - off
  no-empty-pattern:
    - off
  no-cond-assign:
    - error
    - except-parens
  arrow-parens:
    - off
  no-underscore-dangle:
    - off
  comma-dangle:
    - off
  class-methods-use-this:
    - off
  arrow-body-style:
    - off
  consistent-return:
    - off
  padded-blocks:
    - off
  global-require:
    - off
  no-multi-assign:
    - off
  object-curly-newline:
    - off
  function-paren-newline:
    - off
  prefer-destructuring:
    - off
  no-await-in-loop:
    - off
  no-restricted-syntax:
    - error
    - WithStatement
  object-curly-spacing:
    - off
  no-else-return:
    - off
  no-continue:
    - off
  space-infix-ops:
    - off
  no-console:
    - off
  no-shadow:
    - off
  new-cap:
    - off
  no-constant-condition:
    - off
  import/no-extraneous-dependencies:
    - off
  import/prefer-default-export:
    - off
  import/newline-after-import:
    - off
  import/extensions:
    - off
  block-spacing:
    - off
  no-lonely-if:
    - off
  curly:
    - off
  react/prop-types:
    - off
  react/sort-comp:
    - off
  react/forbid-prop-types:
    - off
  react/prefer-stateless-function:
    - off
  jsx-a11y/no-static-element-interactions:
    - off
  jsx-a11y/href-no-hash:
    - off
  jsx-a11y/anchor-is-valid:
    - off
  react/jsx-filename-extension:
    - off
  react/no-danger:
    - off
  react/jsx-no-bind:
    - off
  jsx-a11y/click-events-have-key-events:
    - off
  jsx-a11y/label-has-for:
    - off
  react/no-array-index-key:
    - off
